<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/txt_temp_actual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ff7acfff"
        android:text="Temperatura actual"
        android:layout_below="@+id/my_toolbar"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="46%" />

    <ImageView
        android:id="@+id/progressBar1Vacia"
        android:src="#7acfff"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/my_toolbar"
        android:background="#ff7acfff"
        android:layout_toRightOf="@+id/txt_temp_actual"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="10%"
        />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/my_toolbar"
        android:background="#ff7acfff"
        android:layout_toRightOf="@+id/txt_temp_actual"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="10%"
        />

    <TextView
        android:id="@+id/txt_name_node0"
        android:text="Nombre"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_temp_actual"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="28%"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_name_node1"
        android:text="Nombre"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_temp_actual"
        android:layout_toRightOf="@id/txt_name_node0"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="28%"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name_node0"
        android:id="@+id/nodo0UpVacia"
        android:src="?android:colorBackground"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="5%"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name_node0"
        android:id="@+id/nodo0Up"
        android:src="@drawable/ic_arrow_drop_up_black_24dp"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="5%"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nodo0DownVacia"
        android:layout_below="@+id/nodo0UpVacia"
        android:src="?android:colorBackground"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="5%"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nodo0Down"
        android:layout_below="@+id/nodo0UpVacia"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="5%"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name_node1"
        android:id="@+id/nodo1UpVacia"
        android:layout_toRightOf="@id/txt_temp_node0"
        android:src="?android:colorBackground"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="5%"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name_node1"
        android:id="@+id/nodo1Up"
        android:layout_toRightOf="@id/txt_temp_node0"
        android:src="@drawable/ic_arrow_drop_up_black_24dp"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="5%"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nodo1DownVacia"
        android:layout_below="@+id/nodo1UpVacia"
        android:layout_toRightOf="@id/txt_temp_node0"
        android:src="?android:colorBackground"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="5%"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nodo1Down"
        android:layout_below="@+id/nodo1UpVacia"
        android:layout_toRightOf="@id/txt_temp_node0"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="5%"
        />

    <TextView
        android:id="@+id/txt_temp_node0"
        android:text="Temp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name_node0"
        android:layout_toRightOf="@id/nodo0UpVacia"
        android:textSize="40sp"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="23%"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_temp_node1"
        android:text="Temp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name_node1"
        android:layout_toRightOf="@id/nodo1UpVacia"
        android:textSize="40sp"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="23%"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/txt_hum_node0"
        android:text="Hum"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_temp_node0"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="28%"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/txt_hum_node1"
        android:text="Hum"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_temp_node1"
        android:layout_toRightOf="@id/txt_hum_node0"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="28%"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/txt_date_node0"
        android:text="Date"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_hum_node0"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="28%"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_date_node1"
        android:text="Date"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_hum_node1"
        android:layout_toRightOf="@id/txt_temp_node0"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="28%"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/txt_temperatura_deseada"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ff7acfff"
        android:text="Temperatura deseada"
        android:layout_below="@+id/my_toolbar"
        android:layout_toRightOf="@id/progressBar1Vacia"
        android:textColor="@android:color/white"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="43%"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/txt_temperatura_deseada_info"
        android:text="Temp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_temperatura_deseada"
        android:layout_toRightOf="@id/progressBar1Vacia"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="33%"
        android:textAlignment="center"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/txt_masmenos"
        android:text="+-"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_temperatura_deseada"
        android:layout_toLeftOf="@+id/txt_hysteresis"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="2%"
        android:textAlignment="center"
        android:textSize="15sp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/txt_hysteresis"
        android:text="0.00"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_temperatura_deseada"
        android:layout_alignRight="@+id/txt_temperatura_deseada_info"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="6%"
        android:textAlignment="center"
        android:textSize="15sp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/txt_temperatura_deseada_date"
        android:text="sistema_date"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_temperatura_deseada_info"
        android:layout_toRightOf="@id/progressBar1Vacia"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="33%"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLockVacia"
        android:src="?android:colorBackground"
        android:layout_toRightOf="@+id/txt_temperatura_deseada_info"
        android:layout_below="@+id/txt_temperatura_deseada"
        android:layout_alignBottom="@+id/textTempDeseada"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="10%"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageUnLock"
        android:src="@drawable/ic_lock_open_black_24dp"
        android:layout_toRightOf="@+id/txt_temperatura_deseada_info"
        android:layout_below="@+id/txt_temperatura_deseada"
        android:layout_alignBottom="@+id/textTempDeseada"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="10%"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLock"
        android:src="@drawable/ic_lock_black_24dp"
        android:layout_toRightOf="@+id/txt_temperatura_deseada_info"
        android:layout_below="@+id/txt_temperatura_deseada"
        android:layout_alignBottom="@+id/textTempDeseada"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="10%"
        />

    <TextView
        android:id="@+id/txt_manual_automatico"
        android:text="M"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLockVacia"
        android:layout_toRightOf="@+id/txt_temperatura_deseada_date"
        app:layout_heightPercent="14%"
        app:layout_widthPercent="10%"
        android:textSize="40sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_sistema"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ff7acfff"
        android:text="Sistema"
        android:layout_below="@+id/txt_date_node0"
        android:textColor="@android:color/white"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:textAlignment="center"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageWarning"
        android:src="@drawable/ic_report_problem_black_24dp"
        android:layout_below="@+id/txt_date_node0"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageFlash"
        android:src="@drawable/ic_flash_on_black_24dp"
        android:layout_below="@+id/txt_date_node0"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/txt_sistema_info"
        android:text="sistema_info"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_sistema"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="80%"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/txt_sistema_date"
        android:text="sistema_date"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_sistema_info"
        android:layout_alignParentLeft="true"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="40%"/>

    <TextView
        android:id="@+id/txt_sistema_name"
        android:text="sistema_name"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_sistema_info"
        android:layout_toRightOf="@+id/txt_sistema_date"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="40%"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagePower"
        android:background="?android:colorBackground"
        android:src="@drawable/ic_power_settings_new_black_24dp"
        android:layout_toRightOf="@+id/txt_sistema_name"
        android:layout_below="@+id/txt_sistema"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="20%"
     />

    <Button
        android:id="@+id/button1"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/txt_sistema_date"
        app:layout_heightPercent="13%"
        app:layout_widthPercent="90%"
        />

</android.support.percent.PercentRelativeLayout>